@model IEnumerable<TodoListMVC.Models.TaskModel>

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ASP.NET Todolist</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .completed {
            text-decoration: line-through;
            color: #6c757d;
        }
        .form-delete {
            display: inline-block; @* Làm cho form nằm ngang hàng *@
            margin-left: 5px; @* Tạo khoảng cách với nút "Sửa" *@
        }
    </style>
</head>
<body class="bg-light">
    <div class="container">
        <div class="row mt-5">
            <div class="col-md-12">
                <h1 class="text-center display-4">Todolist (ASP.NET MVC & ADO.NET)</h1>
            </div>
        </div>

        @* Bắt đầu 1 form HTML. Form này sẽ gửi dữ liệu (POST) đến Action CREATE của Controller "Tasks"*@
        @using (Html.BeginForm("Create", "Tasks", FormMethod.Post))
         {
        <div class="row mb-3">
            <div class="col-md-10">
                <input type="text" name="taskTitle" class="form-control form-control-lg" placeholder="Bạn định làm gì hôm nay ?" />
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary btn-lg w-100">Thêm Task</button>
            </div>
        </div>
         }
        <div class="row">
            <div class="col-md-12">
                <ul class="list-group" id="taskList">

                    @* 2. Đây là cú pháp "Razor" (lệnh của View) *@
                    @* Nó sẽ lặp (foreach) qua Model (taskList) mà Controller đã gửi sang *@
                    @foreach (var item in Model)
                    {
                        string completedClass = item.IsCompleted ? "completed" : "";
                        string checkedAttribute = item.IsCompleted ? "checked" : "";

                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <input type="checkbox" class="form-check-input me-2" @checkedAttribute>
                            <span class="taskName @completedClass">
                                @* 4. Hiển thị Title của task *@
                                @item.Title
                            </span>
                        </div>
                        <div>
                            @Html.ActionLink("Sửa", "Edit", "Tasks", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" })

                            @using (Html.BeginForm("Delete", "Tasks", FormMethod.Post, new { @class = "form-delete" }))
                                {
                            @*Gửi id đi 1 cách bí mật bằng input ẩn *@
                            @Html.Hidden("id", item.Id);
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc muốn xóa task này?');">Xóa</button>
                                }
                        </div>
                    </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</body>
</html>